@model IEnumerable<Product>

<div class="row m-2"> 
    <table class="table table-striped table-bordered">
    <thead>
        <tr>
            <th>Name</th>
            <th>Price</th>
            <th>Price</th>
        </tr>
    </thead>
        <tbody>
            @foreach (Product p in Model)
                {
                <tr>
                <td>@p?.Name</td>
                <td>@p?.Price.ToString("C2")</td>
                 <td>@p?.Category</td>
                </tr>
                }
        </tbody> 
    </table> 
</div>