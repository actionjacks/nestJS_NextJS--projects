@page "{id:long}"

@model Core.Pages.EditModel
@{
}

<table class="table-striped table-bordered">
    <tbody>
        <tr>
            <th>Name</th>
            <td>@Model.Product.Name</td>
        </tr>
        <tr>
            <th>Price</th>
            <td>@Model.Product.Price</td>
        </tr>
    </tbody>
</table>

<form method="post">
    @Html.AntiForgeryToken()
    <div class="form-group">
        <label>Price</label>
        <input type="text" name="price" class="form-control" value="@Model.Product.Price" />
    </div>

    <button class="btn btn-primary mt-2">
        Submit
    </button>
</form>